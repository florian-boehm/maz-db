<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<AnchorPane minWidth="-Infinity" prefWidth="330.0" xmlns="http://javafx.com/javafx/8.0.111"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="de.spiritaner.maz.controller.person.PersonEditorDialogController">
    <children>
        <GridPane alignment="center" hgap="10.0" vgap="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                  AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>

                <Text styleClass="headline" fx:id="titleText" text="Person bearbeiten/anlegen" GridPane.columnSpan="2147483647" GridPane.rowIndex="0"/>
                <Separator prefWidth="200.0" GridPane.columnSpan="2147483647" GridPane.rowIndex="1"/>

                <fx:include fx:id="personEditor" source="person_editor.fxml" GridPane.columnIndex="0"
                            GridPane.columnSpan="2" GridPane.rowIndex="2"/>

                <ButtonBar GridPane.columnSpan="2" GridPane.rowIndex="3">
                    <buttons>
                        <Button fx:id="saveButton" defaultButton="true" mnemonicParsing="false" onAction="#save"
                                text="%create"/>
                        <Button fx:id="cancelButton" cancelButton="true" mnemonicParsing="false"
                                onAction="#requestClose" text="%cancel"/>
                    </buttons>
                    <GridPane.margin>
                        <Insets top="10.0"/>
                    </GridPane.margin>
                </ButtonBar>
                <Button fx:id="showHistoryButton" mnemonicParsing="false" onAction="#showHistory"
                        GridPane.columnIndex="1" GridPane.halignment="RIGHT">
                    <graphic>
                        <ImageView pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../../img/history_16.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
            </children>
            <columnConstraints>
                <ColumnConstraints halignment="LEFT" hgrow="NEVER" maxWidth="100.0" minWidth="100.0"/>
                <ColumnConstraints halignment="LEFT" hgrow="ALWAYS"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints/>
                <RowConstraints/>
                <RowConstraints/>
                <RowConstraints valignment="BOTTOM"/>
            </rowConstraints>
        </GridPane>
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
</AnchorPane>
