<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import de.spiritaner.maz.view.component.BindableComboBox?><?import de.spiritaner.maz.view.component.BindableToggleSwitch?>approvedToggleSwitch
        <?import de.spiritaner.maz.view.component.BindableToggleSwitch?>
<GridPane alignment="center" hgap="10.0" vgap="10.0" xmlns="http://javafx.com/javafx/8.0.111"
          xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="de.spiritaner.maz.controller.approval.ApprovalEditorController">
    <children>
        <Label text="Einwilligung:"/>
        <BorderPane GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" GridPane.vgrow="NEVER">
            <center>
                <BindableComboBox val="approval.approvalType" fx:id="approvalTypeComboBox"
                                  maxWidth="1.7976931348623157E308" BorderPane.alignment="CENTER"/>
            </center>
            <right>
                <Button fx:id="addNewApprovalTypeButton" mnemonicParsing="false" onAction="#addNewApprovalType" text="+"
                        BorderPane.alignment="CENTER"/>
            </right>
        </BorderPane>
        <BindableToggleSwitch val="approval.approved" text="Zugestimmt:" fx:id="approvedToggleSwitch"
                              GridPane.columnSpan="2" GridPane.rowIndex="1"/>
    </children>
    <columnConstraints>
        <ColumnConstraints halignment="LEFT" hgrow="NEVER" maxWidth="100.0" minWidth="100.0"/>
        <ColumnConstraints halignment="LEFT" hgrow="ALWAYS"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints/>
        <RowConstraints/>
    </rowConstraints>

</GridPane>
