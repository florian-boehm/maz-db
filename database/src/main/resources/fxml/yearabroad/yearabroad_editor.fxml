<?xml version="1.0" encoding="UTF-8"?>

<?import de.spiritaner.maz.view.component.BindableDatePicker?>
<?import de.spiritaner.maz.view.component.BindableTextArea?>
<?import de.spiritaner.maz.view.component.BindableTextField?>
<?import de.spiritaner.maz.view.component.BindableToggleSwitch?>
<?import de.spiritaner.maz.view.component.SimpleBindableComboBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane alignment="center" hgap="10.0" vgap="10.0" xmlns="http://javafx.com/javafx/8.0.141"
          xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="de.spiritaner.maz.controller.yearabroad.YearAbroadEditorController">
    <children>
        <Label maxHeight="1.7976931348623157E308" text="Tätigkeitsfeld:"/>
        <BindableTextField fx:id="jobDescriptionField" val="yearAbroad.jobDescription" GridPane.columnIndex="1"/>
        <Label text="Details:" GridPane.rowIndex="1"/>
        <BindableTextArea fx:id="detailsArea" prefHeight="100.0" prefWidth="200.0" val="yearAbroad.details"
                          GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <Label maxHeight="1.7976931348623157E308" text="Abreisedatum:" GridPane.hgrow="ALWAYS" GridPane.rowIndex="2"/>
        <BindableDatePicker fx:id="departureDatePicker" maxWidth="1.7976931348623157E308" showWeekNumbers="true"
                            val="yearAbroad.departureDate" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS"
                            GridPane.rowIndex="2"/>

        <Label text="Rückreisedatum:" GridPane.rowIndex="3"/>
        <BindableDatePicker fx:id="arrivalDatePicker" maxWidth="1.7976931348623157E308" showWeekNumbers="true"
                            val="yearAbroad.arrivalDate" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS"
                            GridPane.rowIndex="3"/>
        <Label text="Anzahl Monate (ww):" GridPane.columnIndex="3" GridPane.rowIndex="4"/>
        <Label text="Abbruchdatum:" GridPane.columnIndex="3"/>
        <BindableDatePicker fx:id="abortionDatePicker" maxWidth="1.7976931348623157E308" showWeekNumbers="true"
                            val="yearAbroad.abortionDate" GridPane.columnIndex="4" GridPane.hgrow="ALWAYS"/>
        <Label text="Abbruchgrund:" GridPane.columnIndex="3" GridPane.rowIndex="1"/>
        <BindableTextArea fx:id="abortionReasonArea" prefHeight="100.0" prefWidth="200.0"
                          val="yearAbroad.abortionReason" GridPane.columnIndex="4" GridPane.rowIndex="1"/>
        <Separator maxHeight="1.7976931348623157E308" orientation="VERTICAL" GridPane.columnIndex="2"
                   GridPane.rowSpan="2147483647"/>
        <BindableDatePicker fx:id="missionDateTimePicker" maxWidth="1.7976931348623157E308" showWeekNumbers="true"
                            val="yearAbroad.missionDate" GridPane.columnIndex="4" GridPane.hgrow="ALWAYS"
                            GridPane.rowIndex="2"/>
        <Label text="Aussendung:" GridPane.columnIndex="3" GridPane.rowIndex="2"/>
        <BindableToggleSwitch fx:id="weltwaertsPromotedToggleSwitch" maxWidth="1.7976931348623157E308"
                              text="Weltwärtsgefördert:" val="yearAbroad.wwPromoted" GridPane.columnIndex="3"
                              GridPane.columnSpan="2" GridPane.rowIndex="3">
            <GridPane.margin>
                <Insets top="3.0"/>
            </GridPane.margin>
        </BindableToggleSwitch>
        <Label text="EP-Nummer:" GridPane.columnIndex="3" GridPane.rowIndex="5"/>
        <SimpleBindableComboBox fx:id="epNumberComboBox" maxWidth="1.7976931348623157E308" val="yearAbroad.epNumber"
                                GridPane.columnIndex="4" GridPane.hgrow="ALWAYS" GridPane.rowIndex="5"/>
        <BindableTextField fx:id="wwMonthsField" val="yearAbroad.wwMonths" GridPane.columnIndex="4"
                           GridPane.rowIndex="4"/>
    </children>
    <columnConstraints>
        <ColumnConstraints halignment="LEFT" hgrow="NEVER" maxWidth="130.0" minWidth="130.0"/>
        <ColumnConstraints halignment="LEFT" hgrow="ALWAYS"/>
        <ColumnConstraints fillWidth="false" halignment="LEFT" hgrow="NEVER"/>
        <ColumnConstraints halignment="LEFT" hgrow="ALWAYS" maxWidth="130.0" minWidth="130.0"/>
        <ColumnConstraints halignment="LEFT" hgrow="ALWAYS"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints valignment="TOP"/>
        <RowConstraints valignment="TOP"/>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
    </rowConstraints>
</GridPane>
