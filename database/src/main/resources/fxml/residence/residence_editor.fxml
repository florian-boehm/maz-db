<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import org.controlsfx.control.ToggleSwitch?>
<?import de.spiritaner.maz.view.component.BindableComboBox?>
<?import de.spiritaner.maz.view.component.BindableToggleSwitch?>
<GridPane alignment="center" hgap="10.0" vgap="10.0" xmlns="http://javafx.com/javafx/8.0.111"
          xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="de.spiritaner.maz.controller.residence.ResidenceEditorController">
    <children>
        <Label text="Wohnortart:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <BorderPane GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" GridPane.rowIndex="0" GridPane.vgrow="NEVER">
            <center>
                <BindableComboBox val="residence.residenceType" fx:id="residenceTypeComboBox"
                                  maxWidth="1.7976931348623157E308" BorderPane.alignment="CENTER">
                    <BorderPane.margin>
                        <Insets/>
                    </BorderPane.margin>
                </BindableComboBox>
            </center>
            <right>
                <Button fx:id="addNewResidenceTypeButton" mnemonicParsing="false" onAction="#addNewResidenceType"
                        text="+" BorderPane.alignment="CENTER">
                    <BorderPane.margin>
                        <Insets/>
                    </BorderPane.margin>
                </Button>
            </right>
        </BorderPane>
        <BindableToggleSwitch val="residence.preferredAddress" fx:id="preferredResidence" text="Bevorzugt:"
                              GridPane.columnSpan="2" GridPane.rowIndex="1">
            <GridPane.margin>
                <Insets/>
            </GridPane.margin>
        </BindableToggleSwitch>
        <BindableToggleSwitch val="residence.forPost" fx:id="postAddressToggleSwitch" text="Postadresse:"
                              GridPane.columnSpan="2147483647" GridPane.rowIndex="2"/>
    </children>
    <columnConstraints>
        <ColumnConstraints halignment="LEFT" hgrow="NEVER" maxWidth="100.0" minWidth="100.0"/>
        <ColumnConstraints halignment="LEFT" hgrow="ALWAYS"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
    </rowConstraints>
</GridPane>
