<?xml version="1.0" encoding="UTF-8"?>

<?import de.spiritaner.maz.view.components.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.BorderPane?>
<?import org.controlsfx.control.StatusBar?>
<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.60"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.spiritaner.maz.controller.MainController">
    <top>
        <MenuBar BorderPane.alignment="CENTER">
            <menus>
                <Menu mnemonicParsing="false" text="Anwendung">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Version"/>
                        <MenuItem mnemonicParsing="false" text="Hilfe"/>
                        <MenuItem mnemonicParsing="false" onAction="#closeApplication" text="Schließen"/>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Metadaten">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Geschlechter"/>
                        <MenuItem mnemonicParsing="false" text="Funktionen"/>
                        <MenuItem mnemonicParsing="false" text="Kontaktarten"/>
                        <MenuItem mnemonicParsing="false" text="Wohnortarten"/>
                        <MenuItem mnemonicParsing="false" text="Beziehungsarten"/>
                        <MenuItem mnemonicParsing="false" text="Einwilligungsarten"/>
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>
    <center>
        <TabPane fx:id="sideTabs" side="LEFT" id="side-tabs">
            <ImageTab closable="false" img="@../img/people_32.png" name="Personen" url="@person.fxml"/>
            <ImageTab closable="false" img="@../img/map_32.png" name="Adressen"/>
            <ImageTab closable="false" img="@../img/message_32.png" name="Kontaktwege"/>
            <ImageTab closable="false" img="@../img/manager_32.png" name="Verwaltung"/>
            <ImageTab closable="false" img="@../img/analysis_32.png" name="Analyse"/>
            <ImageTab closable="false" img="@../img/warning_32.png" name="Warnungen"/>
        </TabPane>
    </center>
    <bottom>
        <StatusBar progress="0.5" text="Lade Datensätze" BorderPane.alignment="CENTER"/>
    </bottom>
</BorderPane>
